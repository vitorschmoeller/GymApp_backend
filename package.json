    "@vitest/coverage-v8": "2.1.5",
    "@vitest/ui": "2.1.5",
    "dayjs": "1.11.13",
    "eslint": "8.57.1",
    "npm-run-all": "4.1.5",
    "prisma": "5.22.0",
    "supertest": "7.0.0",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
